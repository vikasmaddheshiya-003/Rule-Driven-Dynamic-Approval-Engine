<window title="Transaction History"
        border="normal"
        closable="false"
        sizable="true"
        apply="com.bank.user.controller.UserTransactionController">

    <vlayout width="100%" height="500px" spacing="10px" style="padding:15px;">

        <!-- ğŸ” FILTER SECTION -->
        <hlayout spacing="10px">
            <label value="From Date:" />
            <datebox id="fromDate" format="yyyy-MM-dd" />

            <label value="To Date:" />
            <datebox id="toDate" format="yyyy-MM-dd" />

            <button id="filterBtn" label="Filter" />
        </hlayout>

        <separator />

        <!-- ğŸ“‹ TRANSACTION LIST -->
        <listbox id="txnList" width="100%" vflex="1">
            <listhead>
                <listheader label="Transaction ID" />
                <listheader label="Request ID" />
                <listheader label="User ID" />
                <listheader label="Transaction Type" />
                <listheader label="Direction" />
                <listheader label="Amount" />
                <listheader label="Balance Before" />
                <listheader label="Balance After" />
                <listheader label="Status" />
                <listheader label="Created At" />
            </listhead>

            <!-- âœ… TEMPLATE -->
            <template name="model">
                <listitem>
                    <listcell label="${each.transactionId}" />
                    <listcell label="${each.requestId}" />
                    <listcell label="${each.userId}" />
                    <listcell label="${each.transactionType}" />
                    <listcell label="${each.txnDirection}" />
                    <listcell label="${each.amount}" />
                    <listcell label="${each.balanceBefore}" />
                    <listcell label="${each.balanceAfter}" />
                    <listcell label="${each.status}" />
                    <listcell label="${each.createdAt}" />
                </listitem>
            </template>

        </listbox>
    </vlayout>
</window>

